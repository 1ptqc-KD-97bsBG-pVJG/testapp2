<%= form_with model: @visit do |form| %>
  <% if @visit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
        <% @visit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.number_field :status %>
  </div>

  <div>
    <%= form.label :scheduled_date, style: "display: block" %>
    <%= form.date_field :scheduled_date %>
  </div>

  <div>
    <%= form.label :scheduled_start, style: "display: block" %>
    <%= form.time_field :scheduled_start %>
  </div>

  <div>
    <%= form.label :scheduled_end, style: "display: block" %>
    <%= form.time_field :scheduled_end %>
  </div>

  <div>
    <%= form.label :scheduled_dudes, style: "display: block" %>
    <%= form.number_field :scheduled_dudes %>
  </div>

  <%= form.fields_for :todos do |builder| %>
    <%= builder.text_field :content %>
    <%= builder.check_box :is_complete? %>
    <%= builder.label :completed_by_user, style: "display: block" %>
    <%= builder.number_field :completed_by_id %>
    <%= builder.time_field :completed_time %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
